<%- include('../partials/header'); -%> 

<style>
    img{
        width: 100%;
        height:100%;
    }
</style>>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 style="margin-left: 2rem;color: darkorchid; font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif; ">
                Tags
            </h1>
            <hr>
            <div class="col-lg-6 col-xs-12">
                <p style="float: left;">
                    <a href="/trending"><button class="btn btn-success btn-lg">Most Popular Posts</button></a>
                </p>
                <p style="float: right;">
                    <a href="/"><button class="btn btn-lg btn-primary " style="text-align:center;">Go Back </button></a>
                </p>
            </div>
        </div>
    </header>

    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% if(tag){ %>
            <% tag.forEach(function(tag){ %>
                <div class="col-lg-4 col-md-3 col-sm-6 col-xs-12 " >
    
                    <div class="caption" style="text-align: center; margin-top:2rem ;color: dodgerblue;">
                        <h3> <%= tag.name %>  </h3>
                    </div>
    
                    <div class="thumbnail ">
                        <img src="<%= tag.image %>">
                    </div>
                    <div style="margin: 1% 35%;">
                        <a href="/alltag/<%= tag._id %>"><button class="btn btn-lg btn-primary"  >Go</button></a>
                    </div>
                    
                </div>
            <% }); %> 
        <% } %> 
        
    </div>
</div>


<%- include('../partials/footer'); -%> 