<%- include('../partials/header'); -%> 

<style>
    img{
        width: 100%;
        height:100%;
    }
</style>>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 style="margin-left: 2rem; color: darkorchid; font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;">
                Posts
            </h1>
            <hr>
            <div class="col-lg-6 col-xs-12">
                <p style="float: left;">
                    <button class="btn btn-warning btn-lg">Trending Posts</button>
                </p>
                <p style="float: right;">
                    <a href="/alltag"><button class="btn btn-lg btn-primary " style="text-align: center;">Go Back </button></a>
                </p>
            </div>
        </div>
    </header>

    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% if(post){ %>
            <% post.forEach(function(post){ %>
                <div class="col-md-3 col-sm-6" style=" margin:1% 0% 1% 5.15%; ">

                    <div class="caption" style="text-align: center; margin-top:2rem ;color: dodgerblue;">
                        <h3> <%= post.name %>  </h3>
                    </div>

                    <div class="thumbnail">
                        <img src="<%= post.image %>">
                    </div>
                    <!-- <div class="blockquote" style=" color: dodgerblue; ">
                        <p> <%= post.description %>  </p>
                    </div> -->
                    <div class="row">
                        <div class="col">
                            <div class="row">
                                <div class="col-md-6">
                                    <div>
                                        <a href="/alltag/tag/post/<%= post.id %>"><button class="btn btn-primary" style="text-align: center; margin:1% auto 1% auto;" >more</button></a>
                                    </div>
                                </div>
                                
                                <!-- <div class="col-md-6">
                                    <p class="fa-pull-right" ">
                                        <i class="fa fa-thumbs-up" ></i>
                                        <span ><%= post.like_count %></span>
                                      </p>
                                 </div> -->
                            </div>
                        </div>
                        <div class="col">
                            <div>
                            <p><em>Posted By : </em><%= post.author %> </p>
                            </div>
                        </div>
                         
                    </div>
                    
                </div>
            <% }); %> 
        <% } %> 
    </div>
</div>



<%- include('../partials/footer'); -%> 