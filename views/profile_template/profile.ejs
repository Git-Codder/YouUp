<%- include('../partials/header') -%> 

<style>
.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  max-width: 300px;
  margin: auto;
  text-align: center;
  font-family: arial;
}

.title {
  color: grey;
  font-size: 18px;
}

/* button {
  border: none;
  outline: 0;
  display: inline-block;
  padding: 8px;
  color: white;
  background-color: #000;
  text-align: center;
  cursor: pointer;
  width: 100%;
  font-size: 18px;
} */

a {
  text-decoration: none;
  font-size: 22px;
  color: black;
}

button:hover, a:hover {
  opacity: 0.7;
}
</style>


<div class="container" style="margin: 5% 0 0 5%;display: flex; flex-wrap: wrap;">

    <div class="row">

        <div class="col-md-3">
    
            <h2 style="text-align:center"><%= user.user_name %>  Profile Card</h2>
    
            <div class="card">
            <img src="https://images.unsplash.com/photo-1590457222567-d3d079a5f8ff?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="John" style="width:100%">
            <h1><%= user.name %> </h1>
            <p class="title"><%= user.field %> </p>
            <p><%= user.place %> </p>
            <div style="margin: 24px 0;">
                <a href="<%= user.dribble_link %> "><i class="fa fa-dribbble"></i></a> 
                <a href="<%= user.twitter_link %> "><i class="fa fa-twitter"></i></a>  
                <a href="<%= user.linkedin_link %> "><i class="fa fa-linkedin"></i></a>  
                <a href="<%= user.facebook_link %> "><i class="fa fa-facebook"></i></a> 
            </div>
            <p><button>Contact</button></p>
            </div>
    
        </div>

        <div class="col-md-9">
            <div class="container">

                <div class="row" >
                    <% user.post.forEach(function(post){ %>
                        <div class="col-md-6 col-sm-3" style=" margin:1% 0% 1% 1.5%; ">
                
                            <div class="caption" style="text-align: center; color: dodgerblue;">
                                <h3> <%= post.name %>  </h3>
                            </div>
                
                            <div class="card">
                                <img src="<%= post.image %>">
                            </div>
                            <div class="blockquote" style=" padding:1.2rem 2rem; color: dodgerblue;">
                                <p> <%= post.description %>  </p>
                            </div>
                            <div>
                                <a href="/alltag/tag/post/<%= post._id %> "><button class="btn btn-primary" style="text-align: center;padding: 1% 50% 1% 50%; margin:1% auto 1% auto;" >more</button></a>
                            </div>
                            
                        </div>
                    <% }); %> 
                </div>

            </div>
        </div>
    
    </div>

</div>

    

<%- include('../partials/footer') -%> 